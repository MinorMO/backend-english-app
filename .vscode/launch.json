{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Start.ts",
            "runtimeArgs": ["-r", "ts-node/register"],
            "program": "${workspaceFolder}/src/infrastructure/driving-adapters/api-rest/Start.ts",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "sourceMaps": true,
            "env": {
                "TS_NODE_PROJECT": "./tsconfig.json"
            }
        }
    ]
}
